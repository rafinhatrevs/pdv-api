{
    "openapi": "3.0.0",
    "info": {
        "title": "API PDV",
        "version": "1.0.0",
        "description": "API para um PDV (Frente de Caixa) que permite o gerenciamento de categorias, usuários, produtos, clientes e pedidos."
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Servidor local"
        },
        {
            "url": "",
            "description": "Deploy"
        }
    ],
    "paths": {
        "/categoria": {
            "get": {
                "summary": "Listar Categorias",
                "tags": [
                    "Categorias"
                ],
                "responses": {
                    "200": {
                        "description": "Listagem de categorias retornada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Categoria"
                                    }
                                },
                                "example": [
                                    {
                                        "id": 1,
                                        "descricao": "Informática"
                                    },
                                    {
                                        "id": 2,
                                        "descricao": "Celulares"
                                    },
                                    {
                                        "id": 3,
                                        "descricao": "Beleza e Perfumaria"
                                    },
                                    {
                                        "id": 4,
                                        "descricao": "Mercado"
                                    }
                                ]
                            }
                        }
                    },
                    "500": {
                        "description": "Erro interno do servidor.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Erro"
                                },
                                "example": {
                                    "mensagem": "Erro interno do servidor."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/usuario": {
            "post": {
                "summary": "Cadastrar Usuário",
                "tags": [
                    "Usuários"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UsuarioInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário cadastrado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "usuario": {
                                            "$ref": "#/components/schemas/Usuario"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "O email informado já está em uso."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            },
            "get": {
                "summary": "Detalhar Perfil",
                "tags": [
                    "Usuários"
                ],
                "responses": {
                    "200": {
                        "description": "Perfil detalhado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não encontrado."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            },
            "put": {
                "summary": "Editar Perfil",
                "tags": [
                    "Usuários"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UsuarioInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Perfil atualizado com sucesso."
                    },
                    "400": {
                        "description": "O email informado já está em uso."
                    },
                    "404": {
                        "description": "Usuário não encontrado."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/usuario/redefinir": {
            "patch": {
                "summary": "Redefinir Senha",
                "tags": [
                    "Usuários"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RedefinirSenhaInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Senha alterada com sucesso."
                    },
                    "400": {
                        "description": "Nova senha não pode ser igual a anterior."
                    },
                    "401": {
                        "description": "Email e senha não correspondem."
                    },
                    "404": {
                        "description": "Usuário não encontrado."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/login": {
            "post": {
                "summary": "Login",
                "tags": [
                    "Login"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Autenticação bem-sucedida.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "usuario": {
                                            "$ref": "#/components/schemas/Usuario"
                                        },
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Email ou senha incorretos."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/produto": {
            "post": {
                "summary": "Cadastrar Produto",
                "tags": [
                    "Produtos"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProdutoInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Produto cadastrado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Produto"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Categoria não encontrada."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "get": {
            "summary": "Listar Produtos",
            "tags": [
                "Produtos"
            ],
            "parameters": [
                {
                    "name": "categoria_id",
                    "in": "query",
                    "schema": {
                        "type": "integer"
                    },
                    "description": "ID da categoria para filtrar produtos."
                }
            ],
            "responses": {
                "200": {
                    "description": "Listagem de produtos retornada com sucesso.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/Produto"
                                }
                            }
                        }
                    }
                },
                "404": {
                    "description": "Nenhum produto encontrado / Categoria não encontrada."
                },
                "500": {
                    "description": "Erro interno do servidor."
                }
            }
        },
        "/produto/:id": {
            "put": {
                "summary": "Editar Produto",
                "tags": [
                    "Produtos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "ID do produto a editar."
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProdutoInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Produto atualizado com sucesso."
                    },
                    "404": {
                        "description": "Produto não encontrado / Categoria não encontrada."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            },
            "get": {
                "summary": "Detalhar Produto",
                "tags": [
                    "Produtos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "ID do produto a detalhar."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Produto detalhado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Produto"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Produto não encontrado."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            },
            "delete": {
                "summary": "Excluir Produto",
                "tags": [
                    "Produtos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "ID do produto a excluir."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Produto excluído com sucesso."
                    },
                    "400": {
                        "description": "Produto vinculado a um pedido não pode ser excluído."
                    },
                    "404": {
                        "description": "Produto não encontrado."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "produto/:id/imagem": {
            "patch": {
                "summary": "Imagem Produto",
                "tags": [
                    "Produtos"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "ID do produto a efetuar upload de imagem."
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/AtualizarImagemProduto"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Imagem atualizada com sucesso / Imagem deletada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "imagem_url": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "A propriedade imagem deve ser fornecida na requisição."
                    },
                    "404": {
                        "description": "Produto não encontrado."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/cliente": {
            "post": {
                "summary": "Cadastrar Cliente",
                "tags": [
                    "Clientes"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ClienteInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Cliente cadastrado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Cliente"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "O email informado já está em uso / O cpf informado já está em uso."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            },
            "get": {
                "summary": "Listar Clientes",
                "tags": [
                    "Clientes"
                ],
                "responses": {
                    "200": {
                        "description": "Listagem de clientes retornada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Cliente"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/cliente/:id": {
            "put": {
                "summary": "Editar Cliente",
                "tags": [
                    "Clientes"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "ID do cliente a editar."
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ClienteInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Cliente alterado com sucesso."
                    },
                    "400": {
                        "description": "O email informado já está em uso / O cpf informado já está em uso."
                    },
                    "404": {
                        "description": "Cliente não encontrado."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            },
            "get": {
                "summary": "Detalhar Cliente",
                "tags": [
                    "Clientes"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "ID do cliente a detalhar."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Cliente detalhado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Cliente"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Cliente não encontrado."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        },
        "/pedido": {
            "post": {
                "summary": "Cadastrar Pedido",
                "tags": [
                    "Pedidos"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PedidoInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Pedido cadastrado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Pedido"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Não há estoque suficiente para o produto de id X."
                    },
                    "404": {
                        "description": "Cliente não encontrado / Produto não encontrado."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            },
            "get": {
                "summary": "Listar Pedidos",
                "tags": [
                    "Pedidos"
                ],
                "parameters": [
                    {
                        "name": "cliente_id",
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        },
                        "description": "ID do cliente para filtrar pedidos."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Listagem de pedidos retornada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ListaPedidos"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Cliente não encontrado / Nenhum pedido encontrado."
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Categoria": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "nome": {
                        "type": "string",
                        "example": "Informática"
                    }
                }
            },
            "Usuario": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                }
            },
            "UsuarioInput": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "senha": {
                        "type": "string"
                    }
                },
                "required": [
                    "nome",
                    "email",
                    "senha"
                ]
            },
            "LoginInput": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "senha": {
                        "type": "string"
                    }
                },
                "required": [
                    "email",
                    "senha"
                ]
            },
            "RedefinirSenhaInput": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "senha_antiga": {
                        "type": "string"
                    },
                    "senha_nova": {
                        "type": "string"
                    }
                },
                "required": [
                    "email",
                    "senha_antiga",
                    "senha_nova"
                ]
            },
            "Produto": {
                "type": "object",
                "properties": {
                    "descricao": {
                        "type": "string"
                    },
                    "quantidade_estoque": {
                        "type": "integer"
                    },
                    "valor": {
                        "type": "integer"
                    },
                    "categoria_id": {
                        "type": "integer"
                    }
                }
            },
            "ProdutoInput": {
                "type": "object",
                "properties": {
                    "descricao": {
                        "type": "string"
                    },
                    "quantidade_estoque": {
                        "type": "integer"
                    },
                    "valor": {
                        "type": "integer"
                    },
                    "categoria_id": {
                        "type": "integer"
                    }
                },
                "required": [
                    "descricao",
                    "quantidade_estoque",
                    "valor",
                    "categoria_id"
                ]
            },
            "AtualizarImagemProduto": {
                "type": "object",
                "properties": {
                    "imagem": {
                        "type": "file",
                        "format": "png"
                    }
                }
            },
            "Cliente": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "cpf": {
                        "type": "string"
                    },
                    "cep": {
                        "type": "string"
                    },
                    "rua": {
                        "type": "string"
                    },
                    "numero": {
                        "type": "integer"
                    },
                    "bairro": {
                        "type": "string"
                    },
                    "cidade": {
                        "type": "string"
                    },
                    "estado": {
                        "type": "string"
                    }
                }
            },
            "ClienteInput": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "cpf": {
                        "type": "string"
                    }
                },
                "required": [
                    "nome",
                    "email",
                    "cpf"
                ]
            },
            "Pedido": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "cliente_id": {
                        "type": "integer"
                    },
                    "observacao": {
                        "type": "string"
                    },
                    "valor_total": {
                        "type": "integer"
                    }
                }
            },
            "PedidoInput": {
                "type": "object",
                "properties": {
                    "cliente_id": {
                        "type": "integer"
                    },
                    "observacao": {
                        "type": "string"
                    },
                    "pedido_produtos": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "produto_id": {
                                    "type": "integer"
                                },
                                "quantidade_produto": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                },
                "required": [
                    "cliente_id",
                    "pedido_produtos"
                ]
            },
            "ListaPedidos": {
                "type": "object",
                "properties": {
                    "pedido": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "integer"
                            },
                            "cliente_id": {
                                "type": "integer"
                            },
                            "observacao": {
                                "type": "string"
                            },
                            "valor_total": {
                                "type": "integer"
                            }
                        }
                    },
                    "pedido_produtos": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "integer"
                                },
                                "quantidade_produto": {
                                    "type": "integer"
                                },
                                "valor_produto": {
                                    "type": "integer"
                                },
                                "pedido_id": {
                                    "type": "integer"
                                },
                                "produto_id": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}